{
  "name": "choreography",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "choreography/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/choreography",
        "tsConfig": "choreography/tsconfig.lib.json",
        "packageJson": "choreography/package.json",
        "main": "choreography/src/index.ts",
        "assets": ["choreography/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "choreography/**/*.ts",
          "choreography/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "choreography/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
